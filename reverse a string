<?php
function stringReverse($str)
{
 //return strrev($str); 
 $reversed = ""; //Initialize an empty string $reversed.
 for($i=strlen($str)-1;$i >= 0;$i--) //Loop through the input string from last character to first.
 {
   $reversed .= $str[$i]; //Append each character to $reversed.
 }
 return $reversed; //Return the reversed string.
}

$str = "i am in germany";
echo stringReverse($str);
?>
